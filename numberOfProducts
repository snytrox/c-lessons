#include <stdio.h>
#include <stdlib.h>

int main(){
    //mondey 2,tusday 5,wednesday 7,thursday 10,friday 15,saturday 19,sunday25
    int numberOfProducts=0, day=0; //ürün sayısı, gün
    char *nameday;
    printf("enter a number of day(1-7)\n");
    scanf("%d",&day);
    if(day <1 || day >7){
        printf("not valid");
        return 0;
    }
    switch(day){
case 7:
    numberOfProducts+=25;
    if(day==7)
    nameday="sunday";
case 6:
    numberOfProducts+=19;
    if(day==6)
    nameday="saturday";

 case 5:
    numberOfProducts+=15;
    if(day==5)
    nameday="friday";

case 4:
    numberOfProducts+=10;
    if(day==5)
    nameday="thursday";

case 3:
    numberOfProducts+=7;
    if(day==3)
    nameday="wednesday";

case 2:
    numberOfProducts+=5;
    if(day==2)
    nameday="tuesday";

case 1:
    numberOfProducts+=2;
    if(day==1)
    nameday="monday";
}
    printf("By the end of %s, a total of %d items had been sold.",nameday,numberOfProducts);



return 0;
}
