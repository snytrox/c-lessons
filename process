#include <stdio.h>
#include <stdlib.h>
int main(){
    char myOperator;
    float num1=0,num2=0,sum=0;
    printf("chose operator(+-*/):");
    scanf(" %c",&myOperator);

    printf("enter two number:\n");
    scanf("%f%f",&num1,&num2);
  switch (myOperator){
case '+':
        sum=num1+num2;
        printf("%.2f + %.2f = %.2f",num1,num2,sum);
        break;
    case '-':
        if(num1>=num2){
            sum=num1-num2;
        printf("%.2f - %.2f = %.2f",num1,num2,sum);
      }
        else{
            sum=num2-num1;
        printf("%.2f - %.2f = %.2f",num2,num1,sum);
        }
        break;
    case '*':
      sum=num1*num2;
        printf("%.2f * %.2f = %.2f",num1,num2,sum);
        break;
    case '/':
         if(num1>=num2){
            sum=num1/num2;
        printf("%.2f / %.2f = %.2f",num1,num2,sum);
      }
        else{
            sum=num2/num1;
        printf("%,2f / %,2f = %,2f",num2,num1,sum);
        }
        break;
}



return 0;
}
