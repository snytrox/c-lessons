int main()
{
menu();
int x,y,j;
printf("choose a number/1-5):");
scanf("%d",&j);
switch (j){

case 1:
printf("enter a number:");
scanf("%d",&x);

printf("%d",absolute(x));
    break;
case 2:
 printf("enter a number:");
scanf("%d",&x);
printf("%d",square(x));
    break;
case 3:
printf("enter a number:");
scanf("%d",&x);
printf("%d",cube(x));
    break;
case 4:
printf("enter two number:\n");
scanf("%d%d",&x,&y);
printf("%d",min(x,y));
    break;
case 5:
printf("enter two number:\n");
scanf("%d%d",&x,&y);
printf("%d",max(x,y));
    break;
default:
printf("invalid login");

}
return 0;
}

void menu(){
printf("\n**************\n");
printf("*    MENU    *\n");
printf("***************\n");
printf("1-mutlak deger\n");
printf("2-kare al\n");
printf("3-kup al\n");
printf("4-minimum\n");
printf("5-maksimum\n");
}
int square(int x){
return x*x;}
int cube(int x){
return x*x*x;}

int max(int x,int y){
if(x<y)
    return y;
else
    return x;}

int min (int x ,int y){
if(x<y)
    return x;
else
    return y;}

int absolute(int x){

if(x<0)
    return -1*x;
else
    return x;}

