#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,a,num=0;
    printf("enter a number:");
    scanf("%d",&num);
    for(int j=1;j<=num;j++){
    a=0;
    for (i=1;i<=j/2;i++){
        if(j%i==0)
            a+=i;

    }if(j==a)
    printf("%d is a perfect number\n",j);

    }
    return 0;
}
