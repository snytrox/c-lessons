#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num=0,i,j;

  printf("enter a number:");
  scanf("%d",&num);
  for(i=1;i<=num;i++){
    for(j=1;j<=i;j++){
        if(j==i){ printf("%d",i);
        break;}
        printf("%d*",i);
        }printf("\n");
  }
int num=0,i,j;

  printf("enter a number:");
  scanf("%d",&num);

  for(i=1;i<=num;i++){

    for(j=num;j>=i;j--){

  if(j==1) {printf("%d",i); break;}
   printf("%d*",i);


        }printf("\n");


  }
return 0;
}
