#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,num;
    printf("enter a number;");
    scanf("%d",&num);
    for(i=1;i<=num;i++){
        for(j=1;j<=num-i;j++){
                printf("  ");}
        for(j=1;j<=i*2-1;j++){
            printf("* ");
        }
    printf("\n");
    }
    for(i=1;i<=num;i++){
            for(j=1;j<=i;j++){
                printf("  ");}
        for(j=1;j<=num*2-1-(i*2);j++){
            printf("* ");

    }
    printf("\n");
    }
return 0;
}
