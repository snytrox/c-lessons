#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,num;
    printf("enter a number;");
    scanf("%d",&num);
    for(i=1;i<=num;i++){
        for(j=1;j<=num;j++){
            if (i==1 || i==num || j==1 || j==num){
                printf("* ");
            }else printf("  ");
        }
        printf("\n"); }




 char letter, firstLetter='A';
   int i,j;
   printf("enter a uppercase letter:");                        
   scanf("%c",&letter);
   for(i=1;i<=letter-'A'+1;i++){


    for(j=1;j<=i;j++){
    printf("%c",firstLetter);

    }
    firstLetter++;
    printf("\n"); }

/*
A
BB
CCC
DDDD
.......
*/

return 0;
}
