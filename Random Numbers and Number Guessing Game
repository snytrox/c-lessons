#include <stdio.h>
#include <stdlib.h>
#include <math.h>  //rand()ve srand() için
#include <time.h> //time(NULL); için
int main()
{
    int key=0, randomNumber,guessCount=0,score=100,guessNumber=1;
    srand(time(NULL)); /*strand seed değerini değiştirir. rastgele sayı üretecin başlama noktasını seed
    Yani seed’i değiştirerek farklı sayılar alırsın
    döngünün dışında çünkü içinde olsa 1 saniyeden kısa süreden işlem olur sonuş değişmez */
    randomNumber=rand()%101;
    printf("**SAYI TAHMIN OYUNUNU HOSGELDINIZ**\n0-100 arasi bir sayi giriniz(cikmak icin -1)\n");
    while(guessNumber!=-1){
        if(key==-1) {printf("\nDevam etmek ister misin?\nYeni tahminini gir: "); key=0;
        guessCount=0;
        score=100;
        randomNumber=rand()%101);}
        else printf("Tahminini gir:");
        scanf("%d",&guessNumber);
        if (guessNumber==-1) return 0;
        if(guessNumber<-1 || guessNumber>100){
            printf("invalid login!\n");
            continue;
        }
        guessCount++;
        if(guessNumber==randomNumber){
            printf("%d dogru tahmin\n%d. tahmininde buldun\n",guessNumber,guessCount);
             printf("Puanin 100 uzerinden %d\n",(guessCount<0)? 0:score);
             key=-1;}
        else{
            if (guessNumber<randomNumber)
                printf("daha buyuk bir sayi girmelisin\n");
                else printf("daha kucuk bir sayi girmelisin\n");
                score-=10;}
                }
return 0;}
