#include <stdio.h>
#include <stdlib.h>
int factorial(int);
int main()
{
    int number;

    printf("enter a number:\n");
    scanf("%d",&number);
   int result = factorial(number);
if (result != -1)   //negatif sayı girilirse -1!=-1 olur alt satır çalışmaz,
        printf("Factorial of %d is: %d\n", number, result);
    return 0;
}

int factorial(int num){
if(num>0)
    return num*factorial(num-1);
else if(num==0)
    return 1;

else
    printf("number cannot be negative");
return -1;
}
